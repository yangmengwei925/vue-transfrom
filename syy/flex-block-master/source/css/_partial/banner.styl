.banner-container
  width: 100%

  .banner-content
    position: relative
    width: 100%
    margin: auto
    display: flex

  // post text
  .post-text
    width: 100%
    max-width 100%
    max-height: 100%
    overflow: hidden

  // tag
  .type-wrap
    a
      display: inline-block
      padding: 5px 12px
      margin: 0 2px 1px 0
      color: #161b3d;
      background-color: #f4f4f4
      border-radius: 20px
      font-size: 10px
      font-weight: 700
      letter-spacing: 1.5px
      transition: 0.3s all

      &:hover
        background-color: #2821fc
        color: #ffffff

  // title
  .title-wrap
    font-weight: 700
    line-height: 1.5
    overflow: hidden
    text-overflow: ellipsis
    word-break: break-word

  // sub title
  .title-sub-wrap
    margin: 0

  // banner image
  .banner-content.full-content
    align-items: center
    justify-content: center

    .post-image
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      z-index: -1
      image-mask()
    
    .post-text
      padding: 0 20px
      text-align: center
      color: #ffffff

// desktop >=768
@media screen and (min-width: 768px)
  .banner-content
    min-height: desktop-banner-height
    padding-bottom: desktop-banner-margin

  .qr_logo_pc 
      display:none
      position: absolute;
      right: 168px;
      top:174px;
      width: 140px;
      padding: 16px;
      //border-radius:33% 33%
      //border: 1px solid #fff;
      //background-color: #fff;
      word-wrap: break-word;
      word-break: break-all;
      box-sizing: border-box;
    .qr_logo_pc p 
      font-size: 14px;
      line-height: 20px;
      text-align:center
  .weixin_logo:hover 
    cursor:pointer

  .animated 
    animation-duration: 1s;
    animation-fill-mode: both;

  .animated.infinite 
    animation-iteration-count: infinite;
  .bounceIn 
    animation-name: bounceIn;
  .weixin_logo>a 
    position: absolute;
    bottom: 40px;
    right: 93px;
    width: 72px;
    height: 72px;
    background: url(http://39.108.55.37/images/cbtn.png);
    text-decoration: none !important;
    border: none !important;
@keyframes bounceIn 
    from,
    20%,
    40%,
    60%,
    80%,
    to 
        animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
    
    0% 
        opacity: 0;
        transform: scale3d(.3, .3, .3);
    
    20% 
        transform: scale3d(1.1, 1.1, 1.1);
    
    40% 
        transform: scale3d(.9, .9, .9);
    
    60% 
        opacity: 1;
        transform: scale3d(1.03, 1.03, 1.03);
    
    80% 
        transform: scale3d(.97, .97, .97);
    
    to 
        opacity: 1;
        transform: scale3d(1, 1, 1);
    


   

  .title-wrap
    font-size: font-desktop-large
    margin: 25px 0

  .title-sub-wrap
